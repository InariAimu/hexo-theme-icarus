// date 10.04.2023

@import '../../include/style/const'

$text-color-dark = #ccc

/* patch for avatar */
.image
    // overriding avatar parent style
    &.is-128x128,
    &.mx-auto,
    &.mb-2
        margin-top: 1.0rem !important
        margin-bottom: 1.5em !important

    .avatar
        border-radius: 20px
        border: 1px solid #00000017
        box-shadow: 0px 5px 9px 2px #00000014

/* patch for categories list item */
.card.widget[data-type="categories"]
    .card-content
        .menu
            .menu-list
                li
                    .level
                        border-radius: $radius

                        &:hover
                            background-color: #2b2b2b


/* patch for article images */
.card-content.article
    .content
        h1
            color: $text-color-dark
        h2
            color: $text-color-dark
        h3
            color: $text-color-dark
        h4
            color: $text-color-dark
        h5
            color: $text-color-dark
        img
            border-radius: $card-radius

/* patch global deletion line */
del
    border-radius: 6px
    transition: 0.1s linear
    filter: blur(4px)

del:hover,
del:active
    background: initial
    filter: blur(0px)

/* patch navigation bar */
.navbar-logo
    font-weight: 700;
    letter-spacing: 0.1em;

.navbar-main
    box-shadow: $shadow
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: #454545c4
    backdrop-filter: blur(20px)
    -webkit-backdrop-filter: blur(20px)

/* patch wrong color of navigation bar color */
.navbar-item,
.navbar-link
    color: #f3f3f3

.navbar-logo:hover
    color: $primary !important
    transition: linear 0.2s
.navbar-menu
    background-color: transparent

    a.navbar-item:focus,
    .navbar-link:focus,
    a.navbar-item:focus-within,
    .navbar-link:focus-within,
    a.navbar-item:hover,
    .navbar-link:hover,
    a.navbar-item.is-active,
    .navbar-link.is-active
        background-color: $primary !important
        color: $text-color-dark !important
        transition: linear 0.2s

.navbar-end
    .navbar-item
        i
            width: 1em
            text-align: center

/* patch cookie window */
.cc-window
    color: $text !important
    background-color: #ffffff94 !important
    backdrop-filter: blur(3px)
    -webkit-backdrop-filter: blur(3px)

/* patch search box z-index */
.searchbox
    z-index: 9999
    .searchbox-container,
    .searchbox-header,
    .searchbox-input
        background-color: #3c3c3c
    
    .searchbox-result-item:hover
        background-color: #ffffff2e !important

    .searchbox-result-title,
    .searchbox-result-icon,
    .searchbox-close
        color: $text-color-dark

/* patch wrong color of cards */
.card
    background-color: #3c3c3c
    color: $text-color-dark

/* patch wrong radius of tags*/
.card.widget
    .card-content
        .tags.has-addons
                span:first-child
                    border-top-left-radius: 4px
                    border-bottom-left-radius: 4px
                    border-bottom-right-radius: 0
                    border-top-right-radius: 0
                span:last-child
                    border-top-left-radius: 0
                    border-bottom-left-radius: 0
                    border-bottom-right-radius: 4px
                    border-top-right-radius: 4px
                    background: #5c5c5c
                    color: #fff

/* patch for profile buttons */
.card.widget[data-type="profile"]
    .card-content
        .level.is-mobile.is-multiline
            a:hover
                background-color: #ffffff14

/* patch wrong color of current page selector */
.pagination
    .pagination-link.is-current
        background: $primary
    .pagination-next,
    .pagination-link,
    .pagination-previous
        background-color: #3c3c3c
        color: #fff
    .pagination-next
        a
            color: #fff

/* patch wrong color of a links */
.menu-list
    a.is-active
        color: $primary
        background-color: #2b2b2b

    a:hover
        background-color: #2b2b2b

.button.is-light, article.article
    .article-more
        border-radius: $radius
        background-color: #2b2b2b
        color: #fff

/* patch breadcomb links */
.breadcrumb a
    color: $primary

// patch links
.card-content.article
    .content
        a[target='_blank']
            color: $primary
            &:after
                padding-left: 0.3rem
                padding-right: 0.3rem
                font-family: "Font Awesome 6 Free"
                font-size: 12px
                font-weight: 900
                content: "\f08e"
                color: $primary

.card-content.article
    .content
        blockquote
            background-color: #2b2b2b
            border-left-color: shade(#2b2b2b, 80%)

/* selection color */
::-moz-selection
    color: #fff
    background: $primary

::selection
    color: #fff
    background: $primary

body
    background-color: #2b2b2b
    
.link-muted
    color: #fff

.menu-label
    color: #fff

.level-item
    color: #fff

.title
    color: $text-color-dark

strong
    color: #fff

article.media
    .media-content
        color: #fff

.article-licensing
    background: #454545
    color: #fff

.footer
    background-color: #3c3c3c

    .footer-logo.is-block.mb-2
        color: $primary

    .is-size-7
        color: #fff
        a
            color: $primary

#back-to-top
    color: #fff

    &:hover
        color: #fff
